{
  "name": "evrfinance-vault-saas",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n backend,owner,borrower,admin \"npm -w ./apps/backend run dev\" \"npm -w ./apps/owner-web run dev\" \"npm -w ./apps/borrower-web run dev\" \"npm -w ./apps/admin-web run dev\"",
    "dev:backend": "npm -w ./apps/backend run dev",
    "dev:owner": "npm -w ./apps/owner-web run dev",
    "dev:borrower": "npm -w ./apps/borrower-web run dev",
    "dev:admin": "npm -w ./apps/admin-web run dev",
    "build": "npm --workspaces run build",
    "test": "npm --workspaces --if-present run test",
    "lint": "npm --workspaces --if-present run lint",
    "format": "prettier -w .",
    "typecheck": "npm --workspaces --if-present run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.6.2",
    "typescript": "^5.5.0",
    "vitest": "^1.6.0"
  }
}
